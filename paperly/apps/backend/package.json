{
  "name": "@paperly/backend",
  "version": "1.0.0",
  "description": "Paperly API 서버",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev:port": "PORT=${PORT:-3000} tsx watch src/main.ts",
    "dev:wsl": "DB_HOST_OVERRIDE=$(ip route | grep default | awk '{print $3}') REDIS_HOST_OVERRIDE=$(ip route | grep default | awk '{print $3}') tsx watch src/main.ts",
    "dev:debug": "DEBUG=* tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist node_modules",
    "db:check": "tsx scripts/check-db.ts",
    "test:email": "tsx scripts/test-email.ts",
    "setup:gmail": "tsx scripts/setup-gmail.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.20",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  }
}
